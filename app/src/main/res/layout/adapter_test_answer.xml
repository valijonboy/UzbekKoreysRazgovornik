<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
  android:gravity="center_vertical"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
      android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp">

        <ImageView
            android:id="@+id/adapter_test_answer_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/an1"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/adapter_test_answer_kr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KrWords"
            android:textSize="16sp"
            android:textColor="@color/green"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/adapter_test_answer_uz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KrWords"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:textStyle="bold|italic"
            android:layout_below="@id/adapter_test_answer_kr"/>

        <ImageView
            android:layout_marginLeft="15dp"
            android:id="@+id/adapter_test_answer_sound"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_volume_up_black_24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>


</LinearLayout>